{
  "name": "birds",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "start": "node build/server.js",
    "dev": "nodemon -r dotenv/config server.ts",
    "copy": "copyfiles birds.html public/**/**/**/* build",
    "build": "tsc --project ./ && npm run copy",
    "format": "prettier --write \"**/*.js\"",
    "bundle": "esbuild client/main.js --bundle --minify --sourcemap --target=chrome58,firefox57,safari11,edge16 --outfile=build/public/main.js"
  },
  "dependencies": {
    "@soapboxsocial/minis.js": "^2.2.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "socket.io": "~0.9"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.37",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.11.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
